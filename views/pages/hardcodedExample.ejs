<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8" />
	<meta
		http-equiv="x-ua-compatible"
		content="ie=edge"
	/>
	<meta
		name="viewport"
		content="width=device-width, initial-scale=1"
	/>
	<title>Lightning Out POC</title>

	<!--Load Lightning Out Script from Salesforce-->
	<script src="https://fazercs--dev.sandbox.my.site.com/lightning/lightning.out.js"></script>
</head>


<body>
	<h1>Unauthorized</h1>
	<div id="divContainerLwcLightningUnauthorized"></div>
	<br>
	<br>
	<h1>Authorized</h1>
	<div id="divContainerLwcLightningAuthorized"></div>
</body>


<script>
	//Unauthorized
	$Lightning.use(
		"c:LightningOutPublic",
		() => {
			$Lightning.createComponent(
				"c:mfPollBanner",
				{ msg: "It works (LWC)!" },
				"divContainerLwcLightningUnauthorized",
				(cmp) => {
					console.log("LWC component was created (unauthorized)");
				}
			);
		},
		"https://fazercs--dev.sandbox.my.site.com"
	);

	//Authorized
	$Lightning.use(
		"c:LightningOutPrivate",
		() => {
			$Lightning.createComponent(
				"c:mfPollBanner",
				{ msg: "It works (LWC)!" },
				"divContainerLwcLightningAuthorized",
				(cmp) => {
					console.log("LWC component was created (authorized)");
				}
			);
		},
		"https://fazercs--dev.sandbox.my.site.com",
		"<%- accessToken %>"
	);
</script>

</html>